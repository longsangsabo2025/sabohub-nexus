# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Transaction Pooler (optional - recommended for serverless/production)
# VITE_SUPABASE_POOLER_URL=https://aws-0-region.pooler.supabase.com

# App Configuration
VITE_APP_NAME=SABOHUB
VITE_APP_DESCRIPTION="Nền tảng quản lý thông minh cho doanh nghiệp dịch vụ"
VITE_APP_VERSION=1.0.0

# API Configuration (if using external API)
VITE_API_URL=your_api_url_here

# Analytics
VITE_GA_MEASUREMENT_ID=your_google_analytics_id_here
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# AI Configuration (CEO AI Assistant - Choose ONE)
# Option 1: OpenAI GPT-4 (Best quality, ~$5/month)
VITE_OPENAI_API_KEY=sk-proj-your_openai_key_here
VITE_OPENAI_MODEL=gpt-4-turbo-preview

# Option 2: Google Gemini 2.5 Flash (FREE tier, RECOMMENDED)
# Latest model: Fast, intelligent, best price-performance
# Get key: https://aistudio.google.com/app/apikey
# VITE_GEMINI_API_KEY=your_gemini_key_here

# Option 3: Ollama (Local AI, 100% free)
# VITE_OLLAMA_URL=http://localhost:11434
# VITE_OLLAMA_MODEL=llama2

# Environment
VITE_ENVIRONMENT=development
VITE_DEBUG=true